{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug offline.cpp",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/offline",
       "args": ["input.txt", "output.txt", "SDBMHash"],  // <-- put your real args here

        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }
  